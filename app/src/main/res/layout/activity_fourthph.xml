<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/purple"
    android:layout_height="match_parent"
    tools:context=".FourthphActivity">

    <ImageView
        android:id="@+id/correct"
        android:duration="10"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="276dp"
        android:src="@drawable/correct"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wrong"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="276dp"
        android:src="@drawable/wrong"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/malpungsquare"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:text="소리를 듣고\n 해당하는\n 카드를\n 선택해주세요"
        android:textColor="@color/black"
        android:textSize="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ga"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_marginTop="220dp"
        android:layout_weight="1"
        android:background="@drawable/btn_greenplay"
        android:fontFamily="@font/gbold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme3"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="536dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="408dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme4"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="536dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme2"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="408dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
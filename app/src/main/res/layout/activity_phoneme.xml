<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textview"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/square"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:text="소리를 듣고\n 해당하는\n 카드를\n 선택해주세요"
        android:textColor="@color/black"
        android:textSize="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    /.

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ga"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginTop="264dp"
        android:layout_weight="1"
        android:background="@drawable/speakercircle"
        android:fontFamily="@font/gbold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme3"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="536dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    /.

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="408dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="OnClick" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme4"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="536dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="44dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phoneme2"
        android:layout_width="158dp"
        android:layout_height="110dp"
        android:layout_marginTop="408dp"
        android:layout_weight="1"
        android:background="@drawable/white_btn"
        android:fontFamily="@font/gmedium"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/correct"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="205dp"
        android:background="@drawable/correct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
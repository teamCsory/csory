<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/purple"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/total"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/resulttitle"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:text="결과"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/totaltextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.067" />

    <TextView
        android:id="@+id/totaltextview"
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:background="@drawable/result"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:text="결과표시"
        android:textColor="@color/black"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/phreturn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rrrrrr"
        android:fontFamily="@font/gbold"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839" />

    <TextView
        android:id="@+id/wordreturn_msg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:fontFamily="@font/gmedium"
        android:gravity="center"
        android:text="다시하기"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946"></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>